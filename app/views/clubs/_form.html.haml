= form_for @club do |f| 
	%div
		= f.label :name
		= f.text_field :name
	%div
		= f.label :address
		= f.text_area :address, placeholder: "Business address"
	%div	  
		= f.label :contact
		= f.text_field :contact, placeholder: "Name of principal contact"
	%div
		= f.label :email
		= f.text_field :email, placeholder: "Email of principal contact if different to current user"
	%div  
		= f.select :club_type_id, options_for_select(ClubType.all.pluck(:name, :id).uniq)
	%div
		= f.label :active
		= f.check_box :active  
	%div
		= f.submit "Save" 
